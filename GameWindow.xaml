<Window x:Class="GRA2D.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GRA2D"
        mc:Ignorable="d"
        WindowState="Maximized" WindowStyle="None"
        KeyDown="OknoGry_KeyDown"
        Title="GameWindow" Height="1080"  Width="1920">
    <Window.Resources>
        <Style TargetType="Button" x:Key="Button_Menu">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="Button_Sklep">
            <!-- zdefiniowanie stylów dla przycisku -->
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="Background" Value="DodgerBlue"></Setter>
            <Setter Property="FontSize" Value="30"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- zdefiniowanie nowego szablonu dla przycisku-->
                        <Border Background="{TemplateBinding Background}" 
                          CornerRadius="20"
                          BorderBrush="{TemplateBinding BorderBrush}"
                          BorderThickness="{TemplateBinding BorderThickness}">
                            <!-- wartosci sa pobierane  z właściwości przycisku-->
                            <ContentPresenter 
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                            </ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"></RowDefinition>
            <RowDefinition Height="85*" ></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Background="LightSkyBlue">
            <StackPanel Orientation="Horizontal" >
                <StackPanel HorizontalAlignment="Left">
                    <Button Style="{StaticResource Button_Menu}" Name="Powrot_Menu" Foreground="white" Background="DodgerBlue" Width="150" Height="50" Content="Menu" FontSize="30" Click="Powrot_Menu_Click"></Button>
                </StackPanel>
                <StackPanel Margin="400,20,0,0"  Orientation="Horizontal">
                    <Label Width="200" Margin="0,0,70,0" FontSize="30" Name="EtykiataLevel">level:</Label>
                    <Grid>
                        <ProgressBar Margin="0,0,30,0" Width="500"></ProgressBar>
                        <TextBlock Foreground="black" Margin="30,5,0,0" FontSize="30" Text="0/100"></TextBlock>
                    </Grid>
                    <Button HorizontalAlignment="Right" Style="{StaticResource Button_Sklep}" Width="300" Margin="30,0,30,0" FontSize="30" Content="Sklep za punkty"></Button>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="550,15,0,0" Orientation="Horizontal">
                <Label Name="EtykietaPieniadzy" Width="275" Content="pieniądze:" FontSize="30"></Label>
                <Button Style="{StaticResource Button_Sklep}" Width="300" Margin="555,0,0,0" Content="Sklep" FontSize="30"></Button>
            </StackPanel>
        </StackPanel>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Name="SiatkaMapy" Background="LightGray">
            
        </Grid>
    </Grid>
</Window>
