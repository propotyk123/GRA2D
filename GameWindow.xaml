<Window x:Class="GRA2D.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GRA2D"
        mc:Ignorable="d"
        WindowState="Maximized" WindowStyle="None"  
        Title="GameWindow" Height="1080"  Width="1920">
    <Window.Resources>
        <Style TargetType="Button" x:Key="Button_Menu">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"></RowDefinition>
            <RowDefinition Height="85*" ></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Background="LightSkyBlue">
            <StackPanel HorizontalAlignment="Left">
                <Button Style="{StaticResource Button_Menu}" Name="Powrot_Menu" Foreground="white" Background="DodgerBlue" Width="150" Height="50" Content="Menu" FontSize="30" Click="Powrot_Menu_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
